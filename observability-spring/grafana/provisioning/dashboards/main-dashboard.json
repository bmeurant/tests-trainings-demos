      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom"}, "tooltip": {"mode": "single", "sort": "none"}}
    },
    {
      "title": "Application Logs",
      "type": "logs",
      "id": 5,
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 16 },
      "datasource": {
        "type": "loki",
        "uid": "PROMETHEUS"
      },
      "targets": [
        {
          "expr": "{service_name=\"observability-spring\"}",
          "datasource": {
             "type": "datasource",
             "uid": "\${DS_PROMETHEUS}"
